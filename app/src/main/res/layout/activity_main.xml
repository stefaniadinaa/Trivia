<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_intrebare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/intrebare"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_fals"
        app:layout_constraintStart_toStartOf="@+id/btn_fals" />

    <Button
        android:id="@+id/btn_adevarat"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="11dp"
        android:text="@string/btn_adevarat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_urmatoare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fals"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="10dp"
        android:text="@string/btn_fals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_urmatoare"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_urmatoare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_adevarat"
        app:layout_constraintEnd_toStartOf="@+id/btn_fals"
        app:layout_constraintStart_toEndOf="@+id/btn_adevarat"
        app:srcCompat="@android:drawable/ic_media_next" />

</androidx.constraintlayout.widget.ConstraintLayout>